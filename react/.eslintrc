{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "react"    
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "eslint-config-standard",
  "rules": {
    "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
    }],
    "semi": ["error", "always"],
    "no-extra-boolean-cast": 0
  }
}
